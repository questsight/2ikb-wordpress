.navigation__list
  list-style-type none
  margin 0
  padding 0
  text-align center
  position absolute
  transform translate(-50%, -50%)
  top 50%
  left 50%
  width 100%
  @media only screen and (min-width: navigationBreakPoint)
    position static
    transform none
    top auto
    left auto
  & > li
    position relative
    text-align center
    transition-duration 0.35s
    border-bottom 2px solid lightColor
    padding 10px 0
    &:last-child
      margin 0
      border 0
    @media only screen and (min-width: navigationBreakPoint)
      display inline-block
      margin 0 5px 0 0
      border 0
      padding 0
      &:last-child
        margin 0
    &:hover ul
      display block
    & > a
      display inline-block
      color lightColor
      text-transform uppercase
      font-weight 600
      @media only screen and (min-width: navigationBreakPoint)
        text-transform none
        font-weight normal
    & > ul
      background transparent
      margin 0 0 0 -40px
      list-style-type none
      overflow-y auto
      z-index 10
      @media only screen and (min-width: navigationBreakPoint)
        display none
        margin 0 0 0 -100px
        padding 10px 0 0
        left 50%
        width 200px
        position absolute
      & > li
        position relative
        vertical-align top
        margin-left 20px
        line-height round(lineHeight * 0.8)
        @media only screen and (min-width: navigationBreakPoint)
          margin-left auto
          background lightColor
          border-bottom 1px solid themeColor
          line-height lineHeight
          &:last-child
            border 0
        & > a
          display block
          font-size round(fontSize * 0.8)
          padding 5px
          color lightColor
          @media only screen and (min-width: navigationBreakPoint)
            color darkColor
            font-size round(fontSize * 0.9)